#!/bin/bash

# Load variables from settings.env
[[ ! -f settings.env ]] && wget -q -c --content-disposition -P . -N https://raw.githubusercontent.com/Alex4386/minecraft-server-launcher/master/settings.env
source settings.env

mkdir -p "$DIR" && cd "$DIR" || exit

[[ -f ../startSetup ]] && cp ../startSetup .
[[ ! -f startSetup ]] && wget -q -c --content-disposition -P . -N "https://raw.githubusercontent.com/monun/minecraft-server-launcher/master/startSetup"

chmod +x ./startSetup
./startSetup "${DEFAULT_PLUGINS[@]}"
